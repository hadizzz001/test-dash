generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  price       String
  img         String[]
  category    String
  box         Json?
  brand       String
  size        Json?
  color       Json?
  arrival     String   @default("no")
  createdAt   DateTime @default(now())
  views       Int? @default(20)
}

model Category {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique
  img  String[]
}

model Subcategory {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String @unique
  category String
}

model Brand {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  name String   @unique
  img  String[]
}

model Order {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userInfo  Json
  cartItems Json
}

model Social {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  link String
}

model title {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  title String
}

model Banner {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId
  img String[]
}

model Banner1 {
  id  String   @id @default(auto()) @map("_id") @db.ObjectId
  img String[]
}

model Offer {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  text String[]
}

model Offer1 {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  text String
  img  String[]
}

model Code {
  id     String  @id @default(auto()) @map("_id") @db.ObjectId
  code   String
  isUsed Boolean @default(false)
}


model PushToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  guestId   String
  token     String @unique
  createdAt DateTime @default(now())

  @@unique([guestId, token])
}